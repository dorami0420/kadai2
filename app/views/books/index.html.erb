<h1>Books</h1>


  <% @books.each do |book| %>

    <p>Title</p>
  <span><%= book.title %></span>

  <% end %>



<%= form_with model: @book do |f| %>
<h2>New book</h2>

<div>
  <%= flash[:notice] %>
</div>

  <p>Title</p>
  <%= f.text_field :title %>

  <p>Body</p>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>

